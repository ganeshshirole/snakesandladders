<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snakes_ladder.dice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/dice3d"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/dice3d_rounded"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.snakes_ladder.dice.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.snakes_ladder.dice.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
    </application>

</manifest>